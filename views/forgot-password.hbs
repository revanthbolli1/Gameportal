<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="/styles/forgotpassword.css">
    <link rel="stylesheet" href="/styles/nav_pass.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-CJ8DjKX9vijLLt3eBt2Gd+EgOdTtCvz0ZsRgiZPb8+vx9XZvAaOJ7x+c0TR8Ww7LOjvJr/aEL7CC91+nwn/VA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://kit.fontawesome.com/9bb6241c8c.js" defer crossorigin="anonymous"></script>
</head>
<body>
    <div id="navbar">
        <nav>
            <i class="fa-solid fa-gamepad"></i>
            <h2>Gamezone</h2>
            <ul>
                <li><a href="./register">Signup</a></li>
                <li><a href="./login">Login</a></li>
            </ul>
        </nav>
    </div>
    <div class="container">
        <h1>Forgot Password</h1>
        <form id= "forgot-password" action="/forgot-password" method="POST">
            <label for="email">Email</label>
            <input type="email" id="email" name="email">
            <span class="error-message" id="email-error"></span>
            <input type="submit" value="Reset Password">
            <span class="error-message">{{msg}}</span>
        </form>
    </div>
    <script src="/scripts/forgotpasswordvalidate.js"></script>
    <script>
        function submitForm(event) {
        event.preventDefault(); // prevent the form from submitting
        // get the form data -- email input value
        const email = document.querySelector('input[name="email"]').value;
        const userDetails = { email };
        console.log(email)
        // make the API request to forgot-password endpoint
        fetch('http://localhost:8080/forgot-password', {
            method: 'POST',
            headers: {
            'Content-Type': 'application/json'
            },
            body: JSON.stringify(userDetails)
        })
        .then(response => response.json())
        .then(data => {
            console.log(data)
            //show an alert with response message
             alert(data.message)
        })
        .catch(error => {
        console.log(error)
        });
        }
        // attach the submitForm function to the form's submit event
        const forgotpasswordForm = document.querySelector('#forgot-password');
        forgotpasswordForm.addEventListener('submit', submitForm);
    </script>








</body>
</html>
